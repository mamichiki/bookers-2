<div class="container">
 <div class="row">
  <div class="col-md-3">
  <%= render 'users/list', book: @book, user: @user %>
   </div>

    <!--  Book detail    -->

  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
     <tbody>
       <% if @book.user == current_user %>
        <tr>
         <td>
          <%= link_to user_path(@book.user) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %><br>
          <%= link_to @book.user.name, user_path(@book.user) %>
       <% end %>
         </td>

         <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          
           <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
             </td>
       <% else %>
          </tr>
           <tr>
            <td>
             <%= link_to user_path(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name, user_path(@book.user) %>
       <% end %>
           </td>
             <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
           </tr>
       <% end %>
       </tbody>
     </table>
    </div>
   </div>
 </div>